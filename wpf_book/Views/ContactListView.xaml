<UserControl x:Class="wpf_book.Views.ContactListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_book.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Contact List -->
        <Border Grid.Column="0" Style="{DynamicResource Card}" Margin="10,10,5,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding Contacts}"
                         SelectedItem="{Binding SelectedContact}"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemContainerStyle="{DynamicResource ListItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar Circle -->
                                <Border Grid.Column="0" 
                                        Width="50" 
                                        Height="50" 
                                        CornerRadius="25"
                                        Background="{DynamicResource AccentBrush}"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Initial}"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Contact Info -->
                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource ForegroundBrush}"/>
                                    <TextBlock Text="{Binding Phone}" 
                                               FontSize="14"
                                               Foreground="{DynamicResource ForegroundBrush}"
                                               Opacity="0.7"
                                               Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding Email}" 
                                               FontSize="14"
                                               Foreground="{DynamicResource ForegroundBrush}"
                                               Opacity="0.7"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Right Panel - Edit Form -->
        <Border Grid.Column="1" Style="{DynamicResource Card}" Margin="5,10,10,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel IsEnabled="{Binding SelectedContact, Converter={StaticResource NullToBoolConverter}}">
                    <TextBlock Text="Contact Details" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,20"/>

                    <!-- Name -->
                    <TextBlock Text="Name" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,10,0,5"/>
                    <TextBox Text="{Binding SelectedContact.Name, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Padding="10"
                             Background="{DynamicResource BackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"/>

                    <!-- Phone -->
                    <TextBlock Text="Phone" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,15,0,5"/>
                    <TextBox Text="{Binding SelectedContact.Phone, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Padding="10"
                             Background="{DynamicResource BackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"/>

                    <!-- Email -->
                    <TextBlock Text="Email" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,15,0,5"/>
                    <TextBox Text="{Binding SelectedContact.Email, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Padding="10"
                             Background="{DynamicResource BackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"/>

                    <!-- Address -->
                    <TextBlock Text="Address" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,15,0,5"/>
                    <TextBox Text="{Binding SelectedContact.Address, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Padding="10"
                             Background="{DynamicResource BackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"/>

                    <!-- Company -->
                    <TextBlock Text="Company" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,15,0,5"/>
                    <TextBox Text="{Binding SelectedContact.Company, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Padding="10"
                             Background="{DynamicResource BackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"/>

                    <!-- Notes -->
                    <TextBlock Text="Notes" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,15,0,5"/>
                    <TextBox Text="{Binding SelectedContact.Notes, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Padding="10"
                             Height="120"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Background="{DynamicResource BackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
